#headers{
	height:200px;
	background:url('/daan.jpg');
	background-size:cover;
}
.center{
	text-align:center;
}.marauto{
	margin:0 auto;
}
#header-icon{
	height:150px;
	width:100%;
	display:flex;
	justify-content: center;
	align-items: center;
}#icon{
	font-size:40px;
	background:rgb(255, 160, 55);
