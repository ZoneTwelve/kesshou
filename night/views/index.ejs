	height: 90px;
	width: 90px;
	line-height: 90px;
	text-align: center;
	border: 2px solid;
	border-radius: 45px;
	box-shadow: 5px 5px 5px #888888;
}#information{
	width:100%;
	height:auto;
	background:white;
	padding:10px 10px;
}
.left{
	float:left;
}.middle{
	float:center;
}.right{
	float:right;
}
.tleft{
	text-align:left;
}

.w30{
	width:33%;
}.w90{
	width:90%;
}
.de{
	background:rgb(200,200,200);
}
